<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
	android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/conversation_list_img"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="thumbnail"
            android:src="@drawable/conversation1" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="7dp" >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
	            <TextView
	                android:id="@+id/conversation_list_alias"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14sp"
	                android:textColor="@color/black"
	                android:text="AnÃ´nimo fulano de tal"
	                android:textStyle="bold" />
	            	
	            <TextView
			        android:id="@+id/conversation_list_date"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="11sp"
			        android:text="14/02/2014"
			        android:layout_marginLeft="5dp" />
	            
	            </LinearLayout>
            
            <TextView
                android:id="@+id/conversation_list_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"
                android:text="Aqui vai ir um texto da ultima conversa e talsz"
                />
            
        </LinearLayout>
        
</LinearLayout>    


